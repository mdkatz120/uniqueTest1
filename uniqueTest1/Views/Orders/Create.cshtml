@model uniqueTest1.Models.Order

@{
    ViewData["Title"] = "הוסף";
}

<h2>הוספת מנה</h2>

<h4>פרטי מנה</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DishName" class="control-label"></label>
                <input asp-for="DishName" class="form-control" />
                <span asp-validation-for="DishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Allergic" /> @Html.DisplayNameFor(model => model.Allergic)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TypeDish" class="control-label"></label>
                <input asp-for="TypeDish" class="form-control" />
                <span asp-validation-for="TypeDish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Orders" asp-action="Index">חזרה לרשימה</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
